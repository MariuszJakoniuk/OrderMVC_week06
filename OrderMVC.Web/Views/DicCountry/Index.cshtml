@model IEnumerable<OrderMVC.Web.Models.DicCountry>

@{
    ViewData["Title"] = "Lista Państw";
}

<h3>@ViewData["Title"]</h3>

<div class="shadow rounded p-2">
    @*<a asp-action="CreateCountry" class="btn btn-sm btn-outline-success" role="button" aria-pressed="true">Dodaj nowy kraj</a>*@
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UE)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UE)
                </td>
                <td>
                    <div class="btn-group">
                        @*<a class="btn btn-sm btn-outline-success" href="/DicCountry/EditItem/@item.Id">Edytuj</a>
                            <a class="btn btn-sm btn-outline-danger" href="/card/CountryDelete/@item.Id">Usuń</a>*@
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>